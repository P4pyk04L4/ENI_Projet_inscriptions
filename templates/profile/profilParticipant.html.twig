{% extends 'base.html.twig' %}

{% block title %}
    Profil - {{ participant.nom }}
{% endblock %}

{% block body %}

    <div class="corps container-fluid h-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="d-flex justify-content-center py-3">
                    <h1>{{ participant.pseudo }}</h1>
                </div>
                <table class="table py-3">
                    <tr>
                        <td>Prénom</td>
                        <td>{{ participant.prenom }}</td>
                    </tr>
                    <tr>
                        <td>Nom :</td>
                        <td>{{ participant.nom }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td>{% if participant.telephone %}{{ participant.telephone }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{ participant.email }}</td>
                    </tr>
                    <tr>
                        <td>Campus</td>
                        <td>{{ participant.campus.nom }}</td>
                    </tr>
                </table>
                <div class="d-flex justify-content-center py-3">
                    <a href="{{ path('sortie_index') }}">
                        <button class="btn btn-secondary" id="back-button">Retour</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        let backButton = document.querySelector('#back-button');
        backButton.addEventListener('click', function(e){
            if(window.history){
                e.preventDefault();
                window.history.back()
            }
        })
    </script>
{% endblock %}