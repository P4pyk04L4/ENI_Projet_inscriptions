{% extends 'base.html.twig' %}

{% block title %}
    Admin - Gestion des campus
{% endblock %}

{% block body %}
<div class="corps container h-100">
    <div class="row h-100 align-items-center justify-content-center">
        <div class="col-lg-10 col-md-11 col-sm-12">
            <div class="d-flex justify-content-center py-3">
                <h1>GÃ©rer les campus</h1>
            </div>

            {# TABLEAU DES CAMPUS #}
            <table class="table">
                <thead>
                    <th>Campus</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                    {% for lieu in campus %}
                        <tr>
                            <td>{{ lieu.nom }}</td>
                            <td>
                                <button class="btn btn-sm btn-secondary">
                                    Modifier
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    Supprimer
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                <tr>
                    <td>
                    {{ form_start(campusForm) }}
                        {{ form_widget(campusForm.nom) }}
                        {{ form_errors(campusForm.nom) }}
                    </td>
                    <td>
                        {{ form_row(campusForm.submit) }}
                        {{ form_end(campusForm) }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}


