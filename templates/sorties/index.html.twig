{% extends 'base.html.twig' %}

{% block title %}Hello SortiesController!{% endblock %}

{% block body %}

    <div class="bg-body-secondary mb-3" style="height: 100px">
        ESPACE POUR LES FILTRES
    </div>



    <table class="table table-striped">
        <thead>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Cl√¥ture</th>
            <th>Inscrits/places</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('d/m/y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/y') }}</td>
                <td>{{ sortie.participants.count }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>........</td>
                <td>{{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom|first }}.</td>
                <td>........</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
